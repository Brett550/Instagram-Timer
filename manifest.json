{
    "manifest_version": 3,
    "name": "Instagram Timer",
    "version": "1.0",
    "description": "Apply a timer to Instagram to limit your screentime",
    "permissions": ["tabs", "scripting", "storage"],

    "background": {
    "service_worker": "scripts/background.js"
  },

  "content_scripts": [
    {
      "matches": ["*://www.instagram.com/*"],
      "js": ["scripts/content.js"],
      "css": ["styles.css"]
    }
  ],

  "host_permissions": ["*://www.instagram.com/*"],

  "action":{
    "default_popup": "time.html"
  },

  "icons":
  {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}